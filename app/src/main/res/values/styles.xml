<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="checkboxes_style">
        <item name="android:textColor">@color/checkboxes_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="my_timePicker">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="my_switch" parent="Theme.AppCompat.Light">
        <item name="android:colorAccent">#4F80FF</item>
        <item name="android:colorForeground">#B6D0FF</item>
        <item name="colorSwitchThumbNormal">#FAFAFA</item>
        <item name="colorControlActivated">#FAFAFA</item>
    </style>


</resources>
