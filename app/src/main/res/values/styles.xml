<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="checkboxes_style">
        <item name="android:textColor">@color/checkboxes_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="my_timePicker">
        <item name="android:textColor">@color/numbersSelectorColor</item>
    </style>

    <style name="my_switch" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#4F80FF</item>
        <item name="android:colorForeground">#B6D0FF</item>
        <item name="colorSwitchThumbNormal">#4F80FF</item>
        <item name="colorControlActivated">#B6D0FF</item>
    </style>

    <style name="numberpicker_theme" parent="">
        <item name="android:paddingStart=">16dp</item>
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/earlier_later"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hours"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:npv_DividerColor="@color/selected_checkbox_color"
        app:npv_DividerHeight="2dp"
        app:npv_ItemPaddingHorizontal="4dp"
        app:npv_TextColorHint="@color/textColor"
        app:npv_TextColorNormal="@color/numbersBackgroundColor"
        app:npv_TextColorSelected="@color/textColor"
        app:npv_TextSizeNormal="14sp"
        app:npv_TextSizeSelected="22sp"
    </style>


</resources>
