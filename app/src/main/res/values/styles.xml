<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>


    <style name="checkboxes_style">
        <item name="android:textColor">@color/checkboxes_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="my_timePicker">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="my_switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorAccent">#4F80FF</item>
        <item name="android:colorForeground">#B6D0FF</item>
        <item name="colorSwitchThumbNormal">#FAFAFA</item>
        <item name="colorControlActivated">#4F80FF</item>
    </style>
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>


</resources>
